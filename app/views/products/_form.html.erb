<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <%= f.input :name %>
  <%= f.input :category_id, collection: @categories %>
  <%= f.input :description, placeholder: 'maximum 400 characters',length: { maximum: 400 } %>
  <%= f.input :price %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "add product", class: "btn btn-primary" %>
  </div>

<% end %>
